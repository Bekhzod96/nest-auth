{
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "all",
    "jsxBracketSameLine": true,
    "bracketSpacing": true,
    "inferredParser": "typescript",

    "overrides": [
        {
            "files": ["*.json", ".prettierrc"],
            "options": {
                "parser": "json",
                "tabWidth": 2
            }
        }
    ]
}